<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_marginTop="40dp"
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prop06"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:text="@string/modo_baby"
            android:layout_marginRight="4dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_modo_baby"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prop07"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:text="@string/cor_ovo" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:weightSum="1">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_black"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:button="@drawable/check_box_black"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_pink"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:button="@drawable/check_box_pink" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_red"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:button="@drawable/check_box_red" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_purple"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:button="@drawable/check_box_purple" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_blue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:button="@drawable/check_box_blue"
                android:scaleX="1.8"
                android:scaleY="1.8"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_green"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:button="@drawable/check_box_green"
                android:scaleX="1.8"
                android:scaleY="1.8" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/egg_yellow"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:button="@drawable/check_box_yellow"
                android:scaleX="1.8"
                android:scaleY="1.8"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>

